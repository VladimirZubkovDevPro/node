<h2>Order</h2>

<form class="order">
  <div class="form-group">
    <label for="username">Name</label>
    <input type="text" name="user_name" class="form-control" id="username" placeholder="Name">
    <div class="form-control-feedback"></div>
  </div>

  <div class="form-group">
    <label for="email">Email address</label>
    <input type="email" name="user_email" class="form-control" id="email" placeholder="Enter email">
    <div class="form-control-feedback"></div>

  </div>

  <div class="form-group">
    <label for="product">Select product</label>
    <div class="form-control-feedback"></div>
    <select class="form-control" name="product" id="product">
  {{#each products}}
      <option value="{{id}}">{{name}}</option>
  {{/each}}
    </select>
  </div>

  <button type="button" class="btn btn-primary submit">Send</button>
</form>